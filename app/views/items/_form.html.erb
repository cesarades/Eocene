<div class="container">
  <%= simple_form_for(@item) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :description %>
      <%= f.input :price %>
    </div>

    <div type="button" class="btn btn-success btn-lg btn-block">
      <%= f.button :submit %>
    </div>
  <% end %>

</div>
