<div class="container">
  <%= render "shared/searchform" %>
</div>

<div class="container">
  <div class="cards">
    <% @items.each do |item| %>

      <div class="card-product">
        <%= cl_image_tag item.photos.first.key %>
        <div class="card-product-infos">
          <a href="<%= item_path(item) %>"><h2><%= item.name %></h2></a>
          <p><%= item.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
