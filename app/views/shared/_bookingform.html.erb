  <div class="container">
    <%= simple_form_for([@item, @booking]) do |f| %>
      <div id="calendar" class="row justify-content-center">
        <div class="col-3">
          <%= f.input :start_date, as: :date, html5: true, required: true, autofocus: true, input_html: { value: Date.today } %>

        </div>
        <div class="col-3">
          <%= f.input :end_date, as: :date, html5: true, required: true, autofocus: true, input_html: { value: Date.today } %>
        </div>
      </div>
      <%= f.button :submit, id: 'booking-btn', class: 'btn btn-flat', value: 'Book now' %>
    <% end %>
  </div>
