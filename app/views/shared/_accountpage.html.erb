<div class="row my-4 mx-0">
  <div class="col-7">
    <ul class="list-inline tabs-underlined my-2 mx-5">
      <li>
        <h3><a href="<%= listings_path(current_user) %>" class="tab-underlined active">My Listings</a></h3>
      </li>
      <li>
        <h3><a href="<%= purchases_path(current_user) %>" class="tab-underlined">Past Purchases</a></h3>
      </li>
      <li>
        <h3><a href="<%= settings_path(current_user) %>" class="tab-underlined">Settings</a></h3>
      </li>
    </ul>
    <div class="cards">
      <% current_user.items.each do |item| %>
        <div class="card-product">
          <%= cl_image_tag item.photos.first.key %>
          <div class="card-product-infos">
            <a href="<%= item_path(item) %>"><h2><%= item.name %></h2></a>
            <p><%= item.description %></p>
            <p>Â£<%= item.price %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-5" style="box-shadow: 0px 0px 3px grey;">
    <div class="p-3">
      <%= render 'shared/itemform', item: @item %>
    </div>
  </div>
</div>
